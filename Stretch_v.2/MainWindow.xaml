<Window x:Class="Stretch_v._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stretch_v._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="Stretch">
             <Canvas Margin="5">
                <StackPanel>
                    <RadioButton x:Name="RadioButton_Fill" Click="RadioButtonFill_Click" >Fill</RadioButton>
                    <RadioButton x:Name="RadioButton_None" Click="RadioButtonNone_Click" >None</RadioButton>
                    <RadioButton x:Name="RadioButton_Uniform" Click="RadioButtonUniform_Click" >Uniform</RadioButton>
                    <RadioButton x:Name="RadioButton_UniformToFill" Click="RadioButtonUniformToFill_Click" >UniformToFill</RadioButton>
                </StackPanel>
             </Canvas>
        </GroupBox>
        <Image Grid.Column="1" x:Name="ImgDzirt" Source="/img/1.png" />
    </Grid>
</Window>
